<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/top_rounded_gray"
        android:padding="@dimen/_10sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_rounded_medium"
                android:text="Terms and Conditions"
                android:gravity="center_vertical"
                android:textColor="@color/gray_100"
                android:textSize="16sp"
                android:padding="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/closeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_rounded_medium"
                android:text="Close"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:textColor="@color/gray_100"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_6sdp"
                android:fontFamily="@font/gotham_rounded_medium"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lectus laoreet ornare convallis at in. Eget eget sed hac nisi, quis. Consectetur odio pharetra libero nisi metus. Mauris, ut diam nibh sodales. Vitae nunc, nascetur turpis ac pellentesque egestas cursus rhoncus ornare. Vivamus proin amet at aliquam enim nisl, congue donec. Commodo pellentesque accumsan risus, blandit amet blandit consequat. Eu dolor, accumsan ullamcorper pretium duis. Non volutpat eget consequat nibh. Pretium tortor risus integer aliquam mauris vitae laoreet. Scelerisque habitasse eget ut amet, sit tortor eget semper. Pellentesque cursus interdum accumsan lorem. Neque sit amet bibendum condimentum turpis. Elit leo imperdiet turpis a. Mauris habitasse in interdum quam pulvinar viverra neque, vitae. Turpis gravida euismod scelerisque non ut est massa sed tellus. Lectus mauris pulvinar ac odio in ante quam mauris. Nulla ut tellus est, augue. Bibendum mi viverra vitae faucibus viverra nulla. Ac mattis egestas eget pellentesque ultricies et gravida lobortis. "
                android:gravity="center_vertical"
                android:textColor="@color/gray_200"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>