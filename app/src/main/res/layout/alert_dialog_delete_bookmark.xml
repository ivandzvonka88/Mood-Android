<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:backgroundTint="@color/gray_300"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/gray_300"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <TextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_8sdp"
                android:fontFamily="@font/gotham_rounded_medium"
                android:paddingStart="@dimen/_10ssp"
                android:text="Bookmark Delete "
                android:textColor="@color/gray_100"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:lineSpacingExtra="@dimen/_8sdp"
                android:fontFamily="@font/gotham_rounded_medium"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"                android:text="Are you sure you want to delete bookmark?"
                android:textColor="@color/gray_100"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15ssp"
                android:background="@color/gray_300"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yesBT"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:text="YES"
                    android:gravity="center"
                    android:textColor="@color/gray_100"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/noBT"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/gotham_rounded_medium"
                    android:gravity="center"
                    android:text="NO"
                    android:textSize="16sp"
                    android:textColor="@color/pink_300" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>